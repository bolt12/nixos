client.placeholder      #1e1e2e #11111b #cdd6f4 #1e1e2e   #1e1e2e

# Configure border style - thinner modern borders
default_border pixel 1
default_floating_border pixel 2

# Hide borders when only one window
hide_edge_borders smart

# change borders
bindsym $mod+y border none
bindsym $mod+u border pixel 1
bindsym $mod+i border normal


#############################

### settings for i3-gaps: ###

#############################

# Set inner/outer gaps for modern aesthetics
gaps inner 8
gaps outer 4

# Activate smart borders (always)
smart_borders on
